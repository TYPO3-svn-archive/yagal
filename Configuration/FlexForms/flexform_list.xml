<T3DataStructure>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Options</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>

                    <switchableControllerActions>
                        <TCEforms>
                            <label>Overwrite default action (example)</label>
                            <config>
                                <type>select</type>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">Gallery</numIndex>

                                        <numIndex index="1">Gallery->index;Gallery->flashMessages;Album->index;Album->show;Gallery->setup</numIndex>

                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">Album List</numIndex>
                                        <numIndex index="1">Album->list;Album->show</numIndex>
                                    </numIndex>
                                    <numIndex index="2" type="array">
                                        <numIndex index="0">Random Show</numIndex>
                                        <numIndex index="1">Album->randomShow</numIndex>
                                    </numIndex>
                                    <numIndex index="3" type="array">
                                        <numIndex index="0">Random List</numIndex>
                                        <numIndex index="1">Album->randomList; Album->show</numIndex>
                                    </numIndex>
                                    <numIndex index="4" type="array">
                                        <numIndex index="0">Browser</numIndex>
                                        <numIndex index="1">Browser->browser</numIndex>
                                    </numIndex>
                                    <numIndex index="5" type="array">
                                        <numIndex index="0">Browser Show</numIndex>
                                        <numIndex index="1">Browser->detail</numIndex>
                                    </numIndex>

                                    <numIndex index="6" type="array">
                                        <numIndex index="0">Show</numIndex>
                                        <numIndex index="1">Album->show</numIndex>
                                    </numIndex>

                                </items>
                                <minitems>0</minitems>
                                <maxitems>1</maxitems>
                                <size>1</size>
                            </config>
                        </TCEforms>
                    </switchableControllerActions>


                    <settings.piDisableHighlight>
                        <TCEforms>
                            <label>Disable Highlight</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.piDisableHighlight>

                    <settings.showPage>
                        <TCEforms>
                            <label>Page for Show</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                            </config>
                        </TCEforms>
                    </settings.showPage>


                </el>
            </ROOT>
        </sDEF>
        <filter>
            <TCEforms>
                <sheetTitle>Filter</sheetTitle>
            </TCEforms>
            <type>array</type>
            <ROOT>
                <el>

                    <settings.piMaxAlbums>
                        <TCEforms>
                            <label>Max. number of albums to display at once</label>
                            <config>
                                <type>input</type>
                                <size>2</size>
                                <eval>int</eval>
                                <default>10</default>
                            </config>
                        </TCEforms>
                    </settings.piMaxAlbums>
                    <settings.gallery>
                        <TCEforms>
                            <label>Gallery to Display</label>
                            <config>
                                <type>select</type>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0"></numIndex>
                                        <numIndex index="1"></numIndex>
                                    </numIndex>

                                </items>
                                <foreign_table>tx_yagal_domain_model_gallery</foreign_table>

                            </config>
                        </TCEforms>
                    </settings.gallery>
                    <settings.tags>
                        <TCEforms>
                            <label>Tags to Display</label>
                            <config>
                                <type>select</type>
                                <size>10</size>
                                <minitems>0</minitems>
                                <maxitems>9999</maxitems>
                                <autoSizeMax>30</autoSizeMax>
                                <multiple>0</multiple>
                                <foreign_table>tx_yagal_domain_model_tag</foreign_table>
                            </config>
                        </TCEforms>
                    </settings.tags>

                </el>
            </ROOT>
        </filter>
        <resizing>
            <TCEforms>
                <sheetTitle>Filter</sheetTitle>
            </TCEforms>
            <type>array</type>
            <ROOT>
                <el>
                    <settings.forceResizing>
                        <TCEforms>
                            <label>Force Resizing</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.forceResizing>
                    <settings.piMaxSizeW>
                        <TCEforms>
                            <label>Maximum Size width</label>
                            <config>
                                <type>input</type>
                                <size>20</size>
                                <eval>string</eval>
                                <default></default>
                            </config>
                        </TCEforms>
                    </settings.piMaxSizeW>
                    <settings.piMaxSizeH>
                        <TCEforms>
                            <label>Maximum Size height</label>
                            <config>
                                <type>input</type>
                                <size>20</size>
                                <eval>string</eval>
                                <default></default>
                            </config>
                        </TCEforms>
                    </settings.piMaxSizeH>
                    <settings.piNormalSizeW>
                        <TCEforms>
                            <label>Normal Size widht</label>
                            <config>
                                <type>input</type>
                                <size>20</size>
                                <eval>string</eval>
                                <default></default>
                            </config>
                        </TCEforms>
                    </settings.piNormalSizeW>
                    <settings.piNormalSizeH>
                        <TCEforms>
                            <label>Normal Size height</label>
                            <config>
                                <type>input</type>
                                <size>20</size>
                                <eval>string</eval>
                                <default></default>
                            </config>
                        </TCEforms>
                    </settings.piNormalSizeH>
                    <settings.piThumbSizeW>
                        <TCEforms>
                            <label>Thumbnail Size widht</label>
                            <config>
                                <type>input</type>
                                <size>20</size>
                                <eval>string</eval>
                                <default></default>
                            </config>
                        </TCEforms>
                    </settings.piThumbSizeW>
                    <settings.piThumbSizeH>
                        <TCEforms>
                            <label>Thumbnail Size height</label>
                            <config>
                                <type>input</type>
                                <size>20</size>
                                <eval>string</eval>
                                <default></default>
                            </config>
                        </TCEforms>
                    </settings.piThumbSizeH>
                    <settings.piHighlightSizeW>
                        <TCEforms>
                            <label>Highlight Size widht</label>
                            <config>
                                <type>input</type>
                                <size>20</size>
                                <eval>string</eval>
                                <default></default>
                            </config>
                        </TCEforms>
                    </settings.piHighlightSizeW>
                    <settings.piHighlightSizeH>
                        <TCEforms>
                            <label>Highlight Size height</label>
                            <config>
                                <type>input</type>
                                <size>20</size>
                                <eval>string</eval>
                                <default></default>
                            </config>
                        </TCEforms>
                    </settings.piHighlightSizeH>
                </el>
            </ROOT>
        </resizing>
    </sheets>
</T3DataStructure>