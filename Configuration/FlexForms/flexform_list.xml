<T3DataStructure>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>Options</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.maxAlbums>
						<TCEforms>
							<label>Max. number of albums to display at once</label>
							<config>
								<type>input</type>
								<size>2</size>
								<eval>int</eval>
								<default>10</default>
							</config>
						</TCEforms>
					</settings.maxAlbums>
					<settings.view>
						<TCEforms>
							<label>View</label>
							<config>
								<type>select</type>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0"></numIndex>
										<numIndex index="1"></numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">view1</numIndex>
										<numIndex index="1">1</numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">List</numIndex>
										<numIndex index="1">list</numIndex>
									</numIndex>
									<numIndex index="3" type="array">
										<numIndex index="0">view3</numIndex>
										<numIndex index="1">3</numIndex>
									</numIndex>
									<numIndex index="4" type="array">
										<numIndex index="0">view4</numIndex>
										<numIndex index="1">4</numIndex>
									</numIndex>
									<numIndex index="5" type="array">
										<numIndex index="0">view5</numIndex>
									</numIndex>
								</items>

							</config>
						</TCEforms>
					</settings.view>
					<settings.gallery>
						<TCEforms>
							<label>Gallery to Display</label>
							<config>
								<type>select</type>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0"></numIndex>
										<numIndex index="1"></numIndex>
									</numIndex>

								</items>
								<foreign_table>tx_yagal_domain_model_gallery</foreign_table>

							</config>
						</TCEforms>
					</settings.gallery>
					<settings.tags>
						<TCEforms>
							<label>Tags to Display</label>
							<config>
								<type>select</type>
								<size>10</size>
								<minitems>0</minitems>
								<maxitems>9999</maxitems>
								<autoSizeMax>30</autoSizeMax>
								<multiple>0</multiple>
								<foreign_table>tx_yagal_domain_model_tag</foreign_table>
							</config>
						</TCEforms>
					</settings.tags>
					<settings.disableComment>
						<TCEforms>
							<label>Disable Comments</label>
							<config>
								<type>check</type>
							</config>
						</TCEforms>
					</settings.disableComment>
					<settings.disableHighlight>
						<TCEforms>
							<label>Disable Highlight</label>
							<config>
								<type>check</type>
							</config>
						</TCEforms>
					</settings.disableHighlight>
					<settings.showPage>
						<TCEforms>
							<label>Page for Show</label>
							<config>

								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
							</config>
						</TCEforms>
					</settings.showPage>
				</el>
			</ROOT>
		</sDEF>
	</sheets>
</T3DataStructure>